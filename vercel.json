{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/boards/(.*)",
      "dest": "/api/boards.ts"
    },
    {
      "src": "/api/cards/(.*)",
      "dest": "/api/cards.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ],
  "outputDirectory": "frontend/build"
}
